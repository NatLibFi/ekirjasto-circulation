#!/usr/bin/env python
"""Check for expired license pools and delete their hold queue."""
import os
import sys

bin_dir = os.path.split(__file__)[0]
package_dir = os.path.join(bin_dir, "..")
sys.path.append(os.path.abspath(package_dir))
from api.odl2 import ODL2HoldQueueReaper
from core.scripts import RunCollectionMonitorScript

RunCollectionMonitorScript(ODL2HoldQueueReaper).run()
